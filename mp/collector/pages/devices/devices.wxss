page {
  height: 100%;
  background-color: #cccccc;
}

.real {
  /* height: calc(100vh - 80rpx); */
  /* height: 100%; */
  overflow-y:auto;
}

.head_time {
  display: flex;
  align-items: center;
  justify-content: center;
}

.time {
  background-color: white;
  margin:30rpx 10rpx;
  text-align: center;
  border-radius: 10px;
  height: 50rpx;
  line-height: 50rpx;
  color: #4178DF;
  font-size: 30rpx;
  font-weight: bold;
  width: 50%;
}

.device {
  margin-bottom: 30rpx;
}

.row_element {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
}

.element {
  width: 20%; 
  background-color: white;
  text-align: center;
  display: flex;
  flex-direction: column;
  border-radius: 10px;
  padding: 20rpx;
  margin:10rpx;
}

.t_value {
  margin-bottom: 5rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: green;
  border-bottom: #999 solid 2px;
  text-align: center;
}

.device_name {
  margin-top: 5rpx;
  font-size: 30rpx;
  color: #4178DF;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.history {
  /* height: calc(100vh - 80rpx); */
  overflow-y:auto;
}

.h_device {
  margin-bottom: 20rpx;
}

.h_te {
  border-bottom: #fff solid 2rpx;
}

.h_head_time {
  display: flex;
  align-items: center;
  justify-content: center;
}

.h_time {
  background-color: white;
  margin:10rpx 10rpx;
  text-align: center;
  border-radius: 10px;
  height: 50rpx;
  line-height: 50rpx;
  color: #4178DF;
  font-size: 25rpx;
  font-weight: bold;
  width: 40%;
}

.h_row_element {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
}

.h_element {
  flex: 1;
  background-color: #fff;
  text-align: center;
  display: flex;
  flex-direction: column;
  border-radius: 10px;
  margin: 5rpx;
}

.h_t_value {
  margin-bottom: 5rpx;
  font-size: 25rpx;
  color: green;
  border-bottom: green solid 2px;
}

.h_device_name {
  margin-top: 5rpx;
  font-size: 20rpx;
  color: #4178DF;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.picker_group {
  height: 85rpx;
  line-height: 85rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: green;
  margin: 10rpx;
}

.picker_group picker {
  background-color: white;
  color: #4178DF;
  height: 55rpx;
  line-height: 55rpx;
  margin: 0 2%;
  padding: 0 2%;
  border-radius: 30rpx;
  font-weight: bold;
  width: 30%;
  text-align: center;
}