page {
  height: 100%;
}

.pyg_task {
  height: 100%;
}

.task_container {
  /* height: calc(100vh - 80rpx); */
  /* display: flex; */
  overflow-y:auto;
}

.task_container .right_menu  {
  background-color: #cccccc;
}

.task_container .right_menu .task_devices {
  align-items: center;
  justify-content: center;
}

.task_container .right_menu .task_devices .task_title {
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
  font-weight: bold;
  border-bottom: 2rpx solid #fff;
  border-radius: 10rpx;
  width: 100%;
}

.task_container .right_menu .task_devices .devices_container {
  display: flex;
  flex-wrap: wrap;
}

.task_container .right_menu .task_devices .devices_container navigator {
  width: 40%;
  text-align: center;
  font-size: 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin: 20rpx 5%;
}

.task_container .right_menu .task_devices .devices_container navigator view {
  width: 100%;
}
 
.task_container .right_menu .task_devices .devices_container .device_name {
  border-top: 2rpx solid #ddd;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
} 

.task_container .right_menu .task_devices .devices_container navigator image {
  margin-top: 10rpx;
  width: 70%;
  height: 100rpx;
}
